package com.greedy.section01;

import java.io.FileNotFoundException;
import java.io.FileReader;
import java.io.IOException;
import java.sql.Connection;
import java.util.Properties;

public class Application03 {

	public static void main(String[] args) {
		
		Properties prop = new Properties();
		Connection con = null;
		
		try {
			/* FileReader로 파일 읽어오기 그리고 prop에 저장 */
			prop.load(new FileReader("src/com/greedy/section01/connection/jdbc-config.properties"));4
			System.out.println(prop);
			
			String driver = prop.getProperty("driver"); /*getProperty 파일 읽어오기*/ /*텍스트 파일이면 다른 방식... 어쩌구..*/
			System.out.println(driver);
			
		} catch (FileNotFoundException e) {
			e.printStackTrace();
		} catch (IOException e) {
			e.printStackTrace();
		}
		
		
		
	}

}
